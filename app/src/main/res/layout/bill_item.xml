<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/billLogo"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:src="@drawable/electricity" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5sp">


                <TextView
                    android:id="@+id/personName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="FULL NAME"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/refNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00000000000"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/dueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Due: 1 January 2024"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="5sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:textSize="12sp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginVertical="5sp"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/label_bg"
                        android:textColor="#ffffff" />

                </LinearLayout>
                <TextView
                    android:id="@+id/units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="59 Units"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 2000"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="textEnd"
                    android:textSize="19sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="5sp"
            android:background="#6044af64"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/infoMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Bill is due in 1 day"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            android:textSize="15sp"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>